include "Configuration/Generator/data/PythiaUESettings.cfi"

source = PythiaSource 
{ 
   untracked int32 pythiaPylistVerbosity = 0 
   untracked bool pythiaHepMCVerbosity = false 
   untracked int32 maxEventsToPrint = 0 
 
   untracked double crossSection = 498000000.
   untracked double filterEfficiency = 0.0086

   # sqrt(s) = 10 TeV
   untracked double comEnergy = 10000.


   PSet PythiaParameters = {

         # This is a vector of ParameterSet names to be read, in this order
         vstring parameterSets = {
               "pythiaUESettings", 
               "processParameters"
         }

         using pythiaUESettingsBlock  
         vstring processParameters = {
               'MSEL=1                 ! QCD high pT processes',
               'CKIN(3)=30.          ! minimum pt hat for hard interactions'
         }

   }
}

module generatorFilter = PythiaFilter
   {
            untracked int32 ParticleID = 13
            untracked double MinPt = 5. 
            untracked double MinEta = -2.5
            untracked double MaxEta = 2.5
   }

# canonical name needed for further steps
sequence ProductionFilterSequence = { generatorFilter}

untracked PSet configurationMetadata = {
    untracked string version = "$Revision: 1.2 $"
    untracked string name = "$Source: /cvs_server/repositories/CMSSW/CMSSW/Configuration/Spring08Production/data/iCSA08_MuonPT5.cff,v $"
    untracked string annotation = "b/c -> mu pT > 5 GEN evts for CSA08"
}
  
