<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">

<ConstantsSection label="fp420.xml" eval="true">
 <Constant name="Rmin"         value="0*fm"/>
 <Constant name="HallZ"        value="31.0*m"/>
 <Constant name="HallR"        value="3.0*m"/>
 <Constant name="HfpZ"         value="30.0*m"/>
 <Constant name="HfpR"         value="1.0*m"/>
</ConstantsSection>

<SolidSection label="fp420.xml">
 <Tubs name="OFP420" rMin="[Rmin]" rMax="[HallR]" dz="[HallZ]" 
                   startPhi="0*deg" deltaPhi="360*deg"/>
 <Tubs name="FP420E" rMin="[Rmin]" rMax="[HfpR]" dz="[HfpZ]" 
                   startPhi="0*deg" deltaPhi="360*deg"/>
</SolidSection>

<LogicalPartSection label="fp420.xml">
 <LogicalPart name="OFP420" category="unspecified">
  <rSolid name="OFP420"/>
  <rMaterial name="materialsfp420:Air"/>
 </LogicalPart>
 <LogicalPart name="FP420E" category="unspecified">
  <rSolid name="FP420E"/>
  <rMaterial name="materialsfp420:Air"/>
 </LogicalPart>
</LogicalPartSection>

<!--  -->
<!--3D DETECTOR IS DESCRIBED IN POSITIVE Y DIRECTION  -->
<!--  -->
<!-- ONE HAVE TO PUT IT IN +(OR -) X -->
<!--  -->
<!--DO ROTATION IN 90 DEGREE USING  FP420R090 TO EXCHANGE X AND Y -->
<!-- DETECTOR WILL LIE AT (-X) -->
<!--  -->
<!--DO ROTATION IN 270 DEGREE USING  FP420R270 TO EXCHANGE X AND Y -->
<!-- DETECTOR WILL LIE AT (+X) -->
<!--  -->
<!--  -->
<PosPartSection label="fp420.xml">
 <PosPart copyNumber="1">
   <rParent name="fp420:OFP420"/>
   <rChild name="fp420:FP420E"/>
  <rRotation name="FP420Rot:FP420R090"/>
 </PosPart>
</PosPartSection>


</DDDefinition>
