 </PosPart>

 <PosPart copyNumber="1">
   <rParent name="tidb:TIDB"/>
   <rChild name="tid:TIDSupport"/>
  <Translation x="[zero]" y="[zero]" z="[tid:SupportZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="tidb:TIDB"/>
