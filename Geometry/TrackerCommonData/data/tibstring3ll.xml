<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="tibstring3ll.xml" eval="true">
 <Constant name="zero"         value="0.0*fm"/>
 <Constant name="MotherCableL" value="64.80*cm"/>
 <Constant name="CoolL"        value="64.90*cm"/>
 <Constant name="Det0Z"        value="-605.456*mm"/>
 <Constant name="Det1Z"        value="-391.972*mm"/>
 <Constant name="Det2Z"        value="-178.218*mm"/>
 <Constant name="ICC0Z"        value="-48.660*cm"/>
 <Constant name="ICC1Z"        value="-27.300*cm"/>
 <Constant name="ICC2Z"        value="-6.020*cm"/>
 <Constant name="ShiftDet"     value="[tibstring3c:StringLoPlsL]/2+[tibstring3c:WaferZLoOffset]"/>
 <Constant name="ShiftCCU"     value="[tibstring3c:StringLoPlsL]/2"/>
 <Constant name="ShiftICC"     value="[ShiftDet]+[tibstring3c:ICCLoOffset]"/>
</ConstantsSection>

<SolidSection label="tibstring3ll.xml">
 <Box name="TIBString3LoMin1"            dx="[tibmodpar:ModuleDx]"    
      dy="[tibmodpar:SSModuleDy]"          dz="[tibstring3c:StringLoMinL]/2"/>
 <Box name="TIBString3LoMin2"            dx="[tibstringpar:CoolTubeW]/2"    
      dy="[tibstringpar:CoolTubeD]/2"    dz="[tibstring3c:StringLoMinL]/2"/>
 <Box name="TIBString3LoMinCable"        dx="[tibstringpar:MotherCableW]/2"    
      dy="[tibstringpar:MotherCableT]/2" dz="[MotherCableL]/2"/>
 <Tubs name="TIBString3LoMinCoolS"       rMin="[zero]"      
       rMax="[tibstringpar:CoolTubeD]/2" dz="[CoolL]/2"
       startPhi="0*deg"                  deltaPhi="360*deg"/>
 <Tubs name="TIBString3LoMinCoolW"       rMin="[zero]"      
       rMax="[tibstringpar:CoolTubeD]/2" dz="[tibstringpar:CoolTubeW]/2"
       startPhi="0*deg"                  deltaPhi="360*deg"/>
 </SolidSection>

<LogicalPartSection label="tibstring3ll.xml">
 <LogicalPart name="TIBString3LoMin1" category="unspecified">
  <rSolid name="TIBString3LoMin1"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="TIBString3LoMin2" category="unspecified">
  <rSolid name="TIBString3LoMin2"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="TIBString3LoMinCable" category="unspecified">
  <rSolid name="TIBString3LoMinCable"/>
  <rMaterial name="tibmaterial:TIB_mother_cable"/>
 </LogicalPart>
 <LogicalPart name="TIBString3LoMinCoolS" category="unspecified">
  <rSolid name="TIBString3LoMinCoolS"/>
  <rMaterial name="tibmaterial:TIB_mod_cool"/>
 </LogicalPart>
 <LogicalPart name="TIBString3LoMinCoolW" category="unspecified">
  <rSolid name="TIBString3LoMinCoolW"/>
  <rMaterial name="tibmaterial:TIB_mod_cool"/>
 </LogicalPart>
</LogicalPartSection>

<PosPartSection label="tibstring3ll.xml">
 <PosPart copyNumber="1">
   <rParent name="tibstring3ll:TIBString3LoMin1"/>
   <rChild name="tibstringpar:TIBCCUM"/>
  <Translation x="[zero]"   y="[zero]"  z="(-[tibstringpar:CCUMZ]+[ShiftCCU])" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="tibstring3ll:TIBString3LoMin2"/>
   <rChild name="tibstring3ll:TIBString3LoMinCable"/>
  <Translation x="[zero]"   y="-[tibstringpar:MotherCableY]"  
               z="-([tibstring3c:StringLoMinL]-[MotherCableL])/2" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="tibstring3ll:TIBString3LoMin2"/>
   <rChild name="tibstring3ll:TIBString3LoMinCoolS"/>
  <Translation x="-[tibstringpar:CoolTubeSep]/2"   y="[zero]"  
               z="-([tibstring3c:StringLoMinL]-[CoolL])/2" />
 </PosPart>
 <PosPart copyNumber="2">
   <rParent name="tibstring3ll:TIBString3LoMin2"/>
   <rChild name="tibstring3ll:TIBString3LoMinCoolS"/>
  <Translation x="[tibstringpar:CoolTubeSep]/2"    y="[zero]"  
               z="-([tibstring3c:StringLoMinL]-[CoolL])/2" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="tibstring3ll:TIBString3LoMin2"/>
   <rChild name="tibstring3ll:TIBString3LoMinCoolW"/>
  <rRotation name="tibstringpar:90XD"/>
  <Translation x="[zero]"   y="[zero]"  z="([CoolL]-
               ([tibstring3c:StringLoMinL]-[tibstringpar:CoolTubeD])/2)" />
 </PosPart>
</PosPartSection>

<Algorithm name="track:DDTrackerZPosAlgo">
  <rParent name="tibstring3ll:TIBString3LoMin1"/>
  <String name="ChildName"    value="tibmodule2:TIBModule2"/>
  <Numeric name="StartCopyNo" value="1"/>
  <Numeric name="IncrCopyNo"  value="1" />
  <Vector name="ZPositions" type="numeric" nEntries="3">
  ([Det0Z]+[ShiftDet]), ([Det1Z]+[ShiftDet]), ([Det2Z]+[ShiftDet]) </Vector>
  <Vector name="Rotations" type="string" nEntries="3">
  tibstringpar:180D, tibstringpar:180D, tibstringpar:180D</Vector>
</Algorithm>

<Algorithm name="track:DDTrackerZPosAlgo">
  <rParent name="tibstring3ll:TIBString3LoMin1"/>
  <String name="ChildName"    value="tibstringss:TIBICCBoxSS"/>
  <Numeric name="StartCopyNo" value="2"/>
  <Numeric name="IncrCopyNo"  value="1" />
  <Vector name="ZPositions" type="numeric" nEntries="3">
  ([Det0Z]+[ShiftICC]), ([Det1Z]+[ShiftICC]), ([Det2Z]+[ShiftICC]) </Vector>
  <Vector name="Rotations" type="string" nEntries="3">
  tibstringpar:NULL, tibstringpar:NULL, tibstringpar:NULL</Vector>
</Algorithm>
 
</DDDefinition>
