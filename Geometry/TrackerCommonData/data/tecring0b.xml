<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="tecring0b.xml" eval="true">
 <Constant name="Modules"   value="1"/>
 <Constant name="DPhi"      value="360*deg/[tecring0:NPhi]"/>
 <Constant name="Phi"       value="([Modules]-1)*[DPhi]"/>
 <Constant name="Phi0"      value="-[Phi]/2"/>
 <Constant name="RminICC"   value="38.00*cm"/>
 <Constant name="RmaxICC"   value="39.00*cm"/>
 <Constant name="Bridges"   value="0"/>
 <Constant name="PhiBridge" value="[Phi0]"/>
 <Constant name="CoolIns0"  value="3333"/>
</ConstantsSection>

<SolidSection label="tecring0b.xml">
 <Tubs name="TECICC0B1"              rMin="[RminICC]" 
       rMax="[RmaxICC]"              dz="[tecpetpar:ICCThick]/2" 
       startPhi="-5.00*deg"          deltaPhi="10.0*deg"/>
 <Tubs name="TECICC0B2"              rMin="39.285*cm" 
       rMax="45.215*cm"              dz="[tecpetpar:ICCThick]/2" 
       startPhi="-2.70*deg"          deltaPhi="5.40*deg"/>
</SolidSection>

<LogicalPartSection label="tecring0b.xml">
 <LogicalPart name="TECRing0B" category="unspecified">
  <rSolid name="tecring0:TECRing0"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="TECICC0B1" category="unspecified">
  <rSolid name="tecring0b:TECICC0B1"/>
  <rMaterial name="tecmaterial:TEC_ICC21"/>
 </LogicalPart>
 <LogicalPart name="TECICC0B2" category="unspecified">
  <rSolid name="tecring0b:TECICC0B2"/>
  <rMaterial name="tecmaterial:TEC_ICC2B1"/>
 </LogicalPart>
 <LogicalPart name="TECRing0BridgeB" category="unspecified">
  <rSolid name="tecring0:TECRing0Bridge"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
</LogicalPartSection>

<Algorithm name="track:DDTECPhiAltAlgo">
  <rParent name="tecring0b:TECRing0B"/>
  <String name="ChildName"    value="tecmodule0:TECModule0"/>
  <Numeric name="StartAngle"  value="[Phi0]"/>
  <Numeric name="IncrAngle"   value="[DPhi]"/>
  <Numeric name="Radius"      value="[tecring0:RPos]"/>
  <Numeric name="ZIn"         value="-[tecpetpar:ModuleZ]"/>
  <Numeric name="ZOut"        value="[tecpetpar:ModuleZ]"/>
  <Numeric name="Number"      value="[Modules]"/>
  <Numeric name="StartCopyNo" value="3"/>
  <Numeric name="IncrCopyNo"  value="1"/>
</Algorithm>

</DDDefinition>
