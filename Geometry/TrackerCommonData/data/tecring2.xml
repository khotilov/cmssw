<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="tecring2.xml" eval="true">
 <Constant name="Rin"            value="38.77*cm"/>
 <Constant name="Rout"           value="54.70*cm"/>
 <Constant name="Rmin"           value="39.10*cm"/>
 <Constant name="NPhi"           value="40"/>
 <Constant name="RPos"           value="[Rmin]+
           ([tecmodule2:FullHeight]+[tecmodpar:TopFrameHeight])/2"/>
 <Constant name="BridgeR"        value="[Rmin]+[tecmodule2:FullHeight]/2"/>
 <Constant name="BridgeZ"        value="([tecpetpar:BridgeThick]-
           [tecmodule2:BridgeThick])/2"/>
</ConstantsSection>

<SolidSection label="tecring2.xml">
 <Tubs name="TECRing2"                rMin="[Rin]" 
       rMax="[Rout]"                  dz="[tecpetpar:ModuleThick]/2" 
       startPhi="-[tecpetpar:PetalContWidth]/2"
       deltaPhi="[tecpetpar:PetalContWidth]"/>
 <Tubs name="TECRing2Bridge"          rMin="[Rin]" 
       rMax="[Rout]"                  dz="[tecpetpar:BridgeThick]/2" 
       startPhi="-[tecpetpar:PetalContWidth]/2"
       deltaPhi="[tecpetpar:PetalContWidth]"/>
</SolidSection>

</DDDefinition>
