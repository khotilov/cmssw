<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<!-- Victoria Martin 11May05 -->


<ConstantsSection label="pixfwdPanel.xml" eval="true">
   <Constant name="zero"                value="0.0*fm"/>
   <Constant name="PanelLength"        value="90.*mm"/>
   <Constant name="PanelThickness"     value="0.503*mm"/>
   <Constant name="PanelWidth1"        value="34*mm"/>
   <Constant name="PanelWidth2"        value="55*mm"/>
 </ConstantsSection>


<SolidSection label="pixfwdPanel.xml">
   <Trd1 name="PixelForwardPanel" 
                            dx1="[PanelWidth1]/2"    dx2="[PanelWidth2]/2"
                            dy1="[PanelThickness]/2" dy2 ="[PanelThickness]/2"
                            dz ="[PanelLength]/2" />
</SolidSection>

<LogicalPartSection label="pixfwdPanel.xml">
   <LogicalPart name="PixelForwardPanel" category = "unspecified">
      <rSolid name="PixelForwardPanel"/>
      <rMaterial name="materials:Beryllium"/>
   </LogicalPart>
</LogicalPartSection>

</DDDefinition>
