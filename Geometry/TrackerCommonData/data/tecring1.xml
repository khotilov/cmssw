<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="tecring1.xml" eval="true">
 <Constant name="Rin"            value="31.74*cm"/>
 <Constant name="Rout"           value="45.93*cm"/>
 <Constant name="Rmin"           value="321.932*mm"/>
 <Constant name="NPhi"           value="24"/>
 <Constant name="RPos"           value="[Rmin]+ 0.0322*mm+
           ([tecmodule1:FullHeight]+[tecmodpar:TopFrameHeight])/2"/>
 <Constant name="ModuleGap"      value="3.437*mm"/>
 <Constant name="RingThick"      value="(2*[tecmodpar:ModuleThickDS]+
                                           [ModuleGap])"/>
 <Constant name="ModuleZ"        value="([tecmodpar:ModuleThickDS]+
                                         [ModuleGap])/2"/>
 <Constant name="RingZ"          value="17.2785*mm"/>
 <Constant name="BridgeR"        value="[Rmin]+[tecmodule1:FullHeight]/2"/>
 <Constant name="BridgeZ"        value="([tecpetpar:BridgeThick]-
           [tecmodule1:BridgeThick])/2"/>
 <Constant name="BridgeFrameZ"   value="[RingZ]+([tecpetpar:BridgeThick]+
           [RingThick])/2"/>
</ConstantsSection>

<SolidSection label="tecring1.xml">
 <Tubs name="TECRing1"                rMin="[Rin]" 
       rMax="[Rout]"                  dz="[RingThick]/2" 
       startPhi="-[tecpetpar:PetalContWidth]/2"
       deltaPhi="[tecpetpar:PetalContWidth]"/>
 <Tubs name="TECRing1Bridge"          rMin="[Rin]" 
       rMax="[Rout]"                  dz="[tecpetpar:BridgeThick]/2" 
       startPhi="-[tecpetpar:PetalContWidth]/2"
       deltaPhi="[tecpetpar:PetalContWidth]"/>
</SolidSection>

</DDDefinition>
