<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="tecring6.xml" eval="true">
 <Constant name="Rin"            value="84.51*cm"/>
 <Constant name="Rout"           value="110.05*cm"/>
 <Constant name="Rmin"           value="84.97*cm"/>
 <Constant name="NPhi"           value="80"/>
 <Constant name="RPos"           value="[Rmin]+
           ([tecmodule6:FullHeight]+[tecmodpar:TopFrameHeight])/2"/>
 <Constant name="BridgeR"        value="[Rmin]+[tecmodule6:FullHeight]/2+
           [tecmodpar:TopFrameHeight]"/>
 <Constant name="BridgeZ"        value="([tecpetpar:BridgeThick]-
           [tecmodule6:BridgeThick])/2"/>
</ConstantsSection>

<SolidSection label="tecring6.xml">
 <Tubs name="TECRing6"                rMin="[Rin]" 
       rMax="[Rout]"                  dz="[tecpetpar:ModuleThick]/2" 
       startPhi="-[tecpetpar:PetalContWidth]/2"
       deltaPhi="[tecpetpar:PetalContWidth]"/>
 <Tubs name="TECRing6Bridge"          rMin="[Rin]" 
       rMax="[Rout]"                  dz="[tecpetpar:BridgeThick]/2" 
       startPhi="-[tecpetpar:PetalContWidth]/2"
       deltaPhi="[tecpetpar:PetalContWidth]"/>
</SolidSection>

</DDDefinition>
