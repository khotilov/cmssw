<project name="runregistry_batchupdater" default="dist" basedir=".">

  <!-- TARGETS -->

  <target name="write" depends="dist" description="Execute  DBS value writer">
    
    <!-- get information about deployment environment -->
    <input message="Database jdbc name:" addproperty="dbname" defaultvalue="(jdbc:oracle:thin:@(DESCRIPTION = (ADDRESS = (PROTOCOL = TCP)(HOST = localhost)(PORT = 10121)) (ADDRESS = (PROTOCOL = TCP)(HOST = localhost)(PORT = 10122)) (ADDRESS = (PROTOCOL = TCP)(HOST = localhost)(PORT = 10123)) (ADDRESS = (PROTOCOL = TCP)(HOST = localhost)(PORT = 10124)) (ADDRESS = (PROTOCOL = TCP)(HOST = localhost)(PORT = 10125)) (LOAD_BALANCE = yes) (CONNECT_DATA = (SERVER = DEDICATED) (SERVICE_NAME = cmsonr.cern.ch) (FAILOVER_MODE=(TYPE = SELECT)(METHOD = BASIC)(RETRIES = 200)(DELAY = 15))))"/>
    <input message="Database username:" addproperty="username" defaultvalue="cms_dqm_run_registry_w"/>
    <input message="Database password:" addproperty="password"/>
    <input message="Shifter name:" addproperty="shifter" defaultvalue=""/>
    <input message="DBS DQM server url:" addproperty="dqmurl" defaultvalue="http://localhost:9999" />
    
    <!-- encrypt authentification parameters with encoder -->
    <java classname="cms.dqm.workflow.Encoder" outputproperty="auth">
      <arg value="${username}"/>
      <arg value="${password}"/>
      <classpath>
        <pathelement location="dist/cmsdqmrunregistry.jar"/>
        <path refid="local-cp"/>
      </classpath>
    </java>

    <java classname="cms.dqm.workflow.BatchEditProvider">
      <arg value="${dbname}"/>
      <arg value="${auth}"/>
      <arg value="${shifter}"/>
      <classpath>
        <pathelement location="dist/cmsdqmrunregistry.jar"/>
        <path refid="local-cp"/>
      </classpath>
    </java>

  </target>

</project>
