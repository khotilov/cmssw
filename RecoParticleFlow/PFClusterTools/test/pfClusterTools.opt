//Options file for PFClusterTools

//Include 'a' term when computing calibrations (leave as false; it doesn't work well).
exercises		withOffset				false
//How many particles required to create a calibration?
exercises		threshold				30

exercises		debug					5

//Apply corrections?
correction		doCorrection			true
//Bulk correction parameters
correction		globalP0 				-2.935
correction		globalP1 				1.0534
correction		globalP2 				0.0
//Low energy correction parameters
correction		correctionLowLimit		9.523
correction		lowEP0					6.0549e-01
correction		lowEP1					6.816e-01
correction		lowEP2					0.0

correction		correctionSuperLowLimit	0.0
correction		superLowEP1				1.0

//How to split between ecalOnly, hcalOnly and ecalHcal
exercises		ecalECut				0.3
exercises		hcalECut				0.5

//Auto fit evolution function to data
evolution		autoFit					0
evolution		basePlots				0
evolution		basePlotsUseTruth		1

evolution		ecalECut				0.3
evolution		hcalECut				0.5
evolution		giveUpCut				0.0
evolution		barrelEndcapEtaDiv		1.0

//Use hand fitted parameters specified below
//P1 adjusts the height of the peak
evolution		ecalOnlyEcalBarrel		-13.5	0.00	1.96	0.74	1.40	1.75	1.00	1.0 	30
evolution 		ecalOnlyEcalEndcap		-12.0	0.00	2.42	0.71	1.30	1.64	0.71	1.8		30
evolution		hcalOnlyHcalBarrel		-10.1	0.00	3.20	0.72	1.27	1.41	0.50	2 		30
evolution 		hcalOnlyHcalEndcap		-13.5	0.00	3.50	0.70	1.29	1.43	0.50	2		30
evolution		ecalHcalEcalBarrel		-35.8	0.00	4.80	0.13	1.20	1.39	0.30	2		15
evolution 		ecalHcalEcalEndcap		-49.0	0.00	6.84	0.10	1.19	1.47	0.20	2		15
evolution 		ecalHcalHcalBarrel		-17.0	0.00	3.73	0.66	1.33	1.39	0.53	2		30
evolution		ecalHcalHcalEndcap		-13.6	0.00	4.34	0.85	1.50	1.47	0.34 	4		30

//(Currently ignored)
evolution		evolutionFunctionMinE 	0.5
//Energy beyond which calibration is to be considered constant
evolution		evolutionFunctionMaxE	30

//What kind of interpolation is used for evaluating particle energy
// 0 = none, 1 = simple bilinear, 2 = fitted function to truth, 3 fitted function to reco, 4 = magic!
spaceManager	interpolationMode		4

//Creates a file, but this isn't used yet.
results			calibParamOutput		calibParams.txt
